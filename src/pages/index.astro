---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Chris Lyons — Developer, Architect, and Builder">
  <!-- Hero Section -->
  <section
    class="relative isolate flex min-h-[calc(100vh-4rem)] items-center justify-center overflow-hidden px-4 sm:px-6 lg:px-8"
  >
    <!-- Multi-layer background: electric green glow + linear gradient -->
    <div class="hero-surface pointer-events-none absolute inset-0 -z-20" aria-hidden="true"></div>

    <!-- Subtle vignette for contrast -->
    <div class="hero-vignette pointer-events-none absolute inset-0 -z-10" aria-hidden="true"></div>

    <!-- Optional micro-noise to prevent banding -->
    <div
      class="pointer-events-none absolute inset-0 -z-10 opacity-[0.10] mix-blend-overlay"
      style="background-image: repeating-linear-gradient(0deg, rgba(255,255,255,0.03) 0, rgba(255,255,255,0.03) 1px, transparent 1px, transparent 2px);"
      aria-hidden="true"
    >
    </div>

    <div class="relative mx-auto max-w-4xl text-center">
      <h1 class="hero-title mb-6 pb-2 font-bold">
        Chris Lyons<span class="text-accent-strong">.</span>
      </h1>
      <p class="hero-tagline mb-6 text-slate-700 dark:text-slate-300">
        Developer, Architect, and Builder
      </p>
      <div class="mx-auto mb-10 max-w-2xl text-lg text-gray-600 dark:text-slate-400">
        <p class="mb-4">Recent work:</p>
        <ul class="space-y-2 text-left">
          <li>• AI monitoring 10K+ financial events daily — surfaces the 5 things that matter</li>
          <li>• Mainframe to cloud migration — 60% cost drop, zero downtime</li>
          <li>• Real-time cyber risk dashboard — mobile-first for C-suite</li>
        </ul>
      </div>
      <div class="flex w-full flex-col gap-3 sm:flex-row sm:justify-center">
        <a href="/projects" class="btn-primary w-full text-center sm:w-auto">View Projects</a>
        <a href="/contact" class="btn-secondary w-full text-center sm:w-auto">Get in Touch</a>
      </div>
    </div>
  </section>
</Layout>
