---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <div class="flex min-h-[calc(100vh-4rem)] items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <div class="text-accent mb-6 text-8xl font-bold">404</div>
      <h1 class="mb-4 text-4xl font-bold">Page Not Found</h1>
      <p class="text-muted mb-8 text-xl">
        Looks like this page doesn't exist. Maybe it's still being built?
      </p>

      <div class="mb-12">
        <pre
          class="inline-block rounded-lg border p-6 text-left font-mono text-sm"
          style="border-color: var(--theme-code-border); background: var(--theme-code-bg); color: var(--theme-code-text);">
          <code>{`if (!pageExists) {
  return <Redirect to="/" />;
}`}</code>
        </pre>
      </div>

      <div class="flex justify-center gap-4">
        <a href="/" class="btn-primary"> Go Home </a>
        <a href="/projects" class="btn-secondary"> View Projects </a>
      </div>
    </div>
  </div>
</Layout>
