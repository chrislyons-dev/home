---
import '../styles/global.css';
import ThemeToggle from '../components/ThemeToggle';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Chris Lyons — Developer, Architect, and Builder' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const currentPath = Astro.url.pathname;
const isHome = currentPath === '/';
---

<!doctype html>
<html lang="en" transition:animate="fade">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon (updated dynamically by theme toggle) -->
    <link
      rel="icon"
      type="image/svg+xml"
      href="/cl_light_graphite-green.svg"
      data-favicon-variant="svg"
    />
    <link
      rel="icon"
      type="image/x-icon"
      href="/cl_light_graphite-green.ico"
      data-favicon-variant="ico"
    />

    <!-- Theme initialization script (prevents flash) -->
    <script
      is:inline
      define:vars={{ themeInitScript: (await import('../utils/themeInit')).getThemeInitScript() }}
    >
      eval(themeInitScript);
    </script>
  </head>
  <body
    class:list={[
      'min-h-screen bg-white text-gray-900 transition-colors dark:bg-slate-950 dark:text-gray-100',
      !isHome && 'page-surface',
    ]}
  >
    <nav
      class="dark:border-electric-500/20 fixed top-0 z-50 w-full border-b border-slate-200 bg-white/80 backdrop-blur-sm dark:bg-slate-950/80"
    >
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <a
            href="/"
            class="hover-accent flex min-h-[44px] min-w-[44px] items-center justify-center text-xl font-bold transition-colors"
          >
            CL
          </a>

          <div class="flex items-center gap-6">
            <a href="/" class:list={['nav-link', currentPath === '/' && 'nav-link-active']}>Home</a>
            <a
              href="/projects"
              class:list={['nav-link', currentPath === '/projects' && 'nav-link-active']}
              >Projects</a
            >
            <a
              href="/architecture"
              class:list={['nav-link', currentPath === '/architecture' && 'nav-link-active']}
              >Architecture</a
            >
            <a
              href="/about"
              class:list={['nav-link', currentPath === '/about' && 'nav-link-active']}>About</a
            >
            <a
              href="/contact"
              class:list={['nav-link', currentPath === '/contact' && 'nav-link-active']}>Contact</a
            >
            <ThemeToggle client:idle />
          </div>
        </div>
      </div>
    </nav>

    <main class="pt-16">
      <slot />
    </main>

    <footer class="dark:border-electric-500/20 mt-20 border-t border-slate-200">
      <div class="mx-auto max-w-6xl px-4 py-8 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between">
          <p class="text-sm text-gray-600 dark:text-slate-400">
            © {new Date().getFullYear()} Chris Lyons
          </p>
          <div class="flex gap-4">
            <a
              href="https://github.com/chrislyons-dev"
              target="_blank"
              rel="noopener noreferrer"
              class="flex min-h-[44px] min-w-[44px] items-center justify-center text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100"
              aria-label="GitHub"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </a>
            <a
              href="https://www.linkedin.com/in/chris-lyons-811563a/"
              target="_blank"
              rel="noopener noreferrer"
              class="flex min-h-[44px] min-w-[44px] items-center justify-center text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100"
              aria-label="LinkedIn"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
