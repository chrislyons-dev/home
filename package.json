{
  "name": "chrislyons-dev",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run diagrams:generate && astro dev",
    "build": "npm run diagrams:generate && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest --watch=false",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type": "tsc --noEmit",
    "format": "prettier --write .",
    "formatcheck": "prettier --check .",
    "check": "npm run test && npm run lint && npm run type && npm run format",
    "prepare": "husky",
    "diagrams:generate": "node scripts/generate-diagram-images.mjs",
    "docs:arch": "node scripts/generate-architecture-docs.js",
    "deps:check": "depcruise --config config/.dependency-cruiser.json src",
    "deps:graph": "depcruise --config config/.dependency-cruiser.json --output-type dot src | dot -T svg > docs/architecture/dependencies.svg",
    "lighthouse": "lhci autorun --config=config/.lighthouserc.json"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.6.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "astro": "^5.16.4",
    "mermaid": "^11.12.2",
    "plantuml-encoder": "^1.4.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@astrojs/markdown-remark": "^6.3.9",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@lhci/cli": "^0.15.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "dependency-cruiser": "^17.3.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "gray-matter": "^4.0.3",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "madge": "^8.0.0",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "vitest": "^4.0.15"
  }
}
