{
  "forbidden": [
    {
      "name": "no-circular",
      "severity": "error",
      "comment": "Circular dependencies make code harder to maintain and test",
      "from": {},
      "to": {
        "circular": true
      }
    },
    {
      "name": "no-orphans",
      "severity": "warn",
      "comment": "Orphan modules are unused and should be removed",
      "from": {
        "orphan": true,
        "pathNot": [
          "\\.(spec|test)\\.(js|ts|tsx)$",
          "\\.d\\.ts$",
          "^scripts/",
          "src/tests/setup\\.ts$",
          "src/utils/themeInit\\.ts$",
          "src/utils/mermaid\\.ts$",
          "src/components/PlantUMLDiagram\\.tsx$"
        ]
      },
      "to": {}
    },
    {
      "name": "no-deprecated-core",
      "severity": "error",
      "comment": "Don't use deprecated Node.js core modules",
      "from": {},
      "to": {
        "dependencyTypes": [
          "core"
        ],
        "path": [
          "^(punycode|domain|constants|sys|_linklist)$"
        ]
      }
    },
    {
      "name": "not-to-unresolvable",
      "severity": "error",
      "comment": "Don't depend on modules that cannot be resolved",
      "from": {},
      "to": {
        "couldNotResolve": true,
        "pathNot": [
          "^astro:",
          "^virtual:"
        ]
      }
    },
    {
      "name": "no-duplicate-dep-types",
      "severity": "warn",
      "comment": "Don't mix dependency types for the same module",
      "from": {},
      "to": {
        "moreThanOneDependencyType": true,
        "dependencyTypesNot": ["type-only"]
      }
    },
    {
      "name": "components-no-direct-imports",
      "severity": "warn",
      "comment": "Components should be imported from their public interface",
      "from": {
        "pathNot": "^src/components/"
      },
      "to": {
        "path": "^src/components/[^/]+/(?!index)",
        "pathNot": "\\.(astro|tsx)$"
      }
    }
  ],
  "options": {
    "doNotFollow": {
      "path": [
        "node_modules",
        "\\.astro"
      ]
    },
    "exclude": {
      "path": [
        "node_modules",
        "\\.astro",
        "dist"
      ]
    },
    "tsPreCompilationDeps": true,
    "tsConfig": {
      "fileName": "tsconfig.json"
    },
    "enhancedResolveOptions": {
      "exportsFields": ["exports"],
      "conditionNames": ["import", "require", "node", "default"]
    },
    "reporterOptions": {
      "dot": {
        "collapsePattern": "^(node_modules|packages|src)/[^/]+"
      },
      "archi": {
        "collapsePattern": "^(node_modules|packages|src)/[^/]+"
      },
      "text": {
        "highlightFocused": true
      }
    }
  }
}
